html(ng-app='TechBlaze')
  // <![endif]
  head
    meta(charset='UTF-8')
    title= home.title
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    link(rel='shortcut icon', href='/assets/favicon.png')
    // Bootstrap 3.3.2
    link(rel='stylesheet', href='/assets/css/bootstrap.min.css')
    link(rel='stylesheet', href='/assets/css/animate.css')
    link(rel='stylesheet', href='/assets/css/font-awesome.min.css')
    //
      <link rel="stylesheet" href="/assets/css/slick.css">
      <link rel="stylesheet" href="/assets/js/rs-plugin/css/settings.css">
    link(rel='stylesheet', href='/assets/css/styles.css')
    script(type='text/javascript', src='/assets/js/modernizr.custom.32033.js')
    //if lt IE 9
      script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
      script(src='https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js')
  body
    // Navigation
    nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
      .container
        // Brand and toggle get grouped for better mobile display
        .navbar-header
          a.navbar-brand(href='#')
            .media
              .media-body
                h3.media-heading TechBlaze
      // /.container
    .wrapper
      section#support.doublediagonal
        .container(ng-controller='UserController as UserCon')
          .section-heading.scrollpoint.sp-effect3
            h1 Welcome to TechBlaze
            .divider
            p Open Source Community
          .row
            .col-md-12
              .row
                .col-md-8.col-sm-8.scrollpoint.sp-effect1
                  form(role='form')
                    .media
                      .media-body
                        h4.media-heading {{UserFormHeading}}                        
                    .form-group
                      input.form-control(type='email', placeholder='username@domain.com', required='true')
                    .form-group(ng-show="SignUp")
                      input.form-control(type='password', title='password', placeholder='Password')
                    .form-group.scrollpoint.sp-effect3
                      input.form-control(type='password', title='confirm password', placeholder='Password')                      
                    button.btn.btn-primary.btn-lg(type='submit',ng-hide="SignUp") Sign in
                    button.btn.btn-primary.btn-lg(type='submit',ng-show="SignUp") Sign up
                .col-md-4.col-sm-4.contact-details.scrollpoint.sp-effect2
                  .media
                    .media-body
                      h4.media-heading                  
                  .media
                    .media-body
                      h4.media-heading Number of Registered Users in TechBlaze is {{userlist.length}}
                  .media
                    .media-body
                      h4.media-heading(ng-show="SignUp") Already have account in TechBlaze
                      h4.media-heading(ng-hide="SignUp") Don't have account in TechBlaze                      
                      h4.media-heading(ng-model="SignUp")
                  .media
                    a.pull-left(href='#')
                      button.btn.btn-primary.btn-lg(ng-click="ChangeAction()",ng-hide="SignUp") Sign Up
                      button.btn.btn-primary.btn-lg(ng-click="ChangeAction()",ng-show="SignUp") Sign In
      footer
        .container          
        .media.scrollpoint.sp-effect3(href='#')
          .media-body
            h2.media-heading TechBlaze
          .social
            a.scrollpoint.sp-effect3(href='#')
              i.fa.fa-twitter.fa-lg
            a.scrollpoint.sp-effect3(href='#')
              i.fa.fa-google-plus.fa-lg
            a.scrollpoint.sp-effect3(href='#')
              i.fa.fa-facebook.fa-lg
                        
    script(src='/assets/js/jquery-1.11.1.min.js')
    //script(src='http://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js')    
    script(src='/assets/js/bootstrap.min.js')
    script(src='/assets/js/slick.min.js')
    script(src='/assets/js/placeholdem.min.js')
    script(src='/assets/js/rs-plugin/js/jquery.themepunch.plugins.min.js')
    script(src='/assets/js/rs-plugin/js/jquery.themepunch.revolution.min.js')
    script(src='/assets/js/waypoints.min.js')
    script(src='/assets/js/scripts.js')
    script(type='text/javascript', src='/js/angular/angular.js')
    script(type='text/javascript', src='/js/angular/angular-resource.js')       
    script(type='text/javascript', src='/js/angular/app.js')
    script(type='text/javascript', src='/js/angular/controllers/user-controller.js')       
